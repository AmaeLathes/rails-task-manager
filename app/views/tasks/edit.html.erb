<h1>Éditer tâche</h1>

<%= form_with model: @task, url: task_path(@task), local: true do |form| %>
  <div>
    <%= form.label :title, "Titre" %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :details, "Détails" %>
    <%= form.text_area :details %>
  </div>
  <div>
    <%= form.label :completed, "Complétée" %>
    <%= form.check_box :completed %>
  </div>
  <div>
    <%= form.submit "Mettre à jour la tâche" %>
  </div>
<% end %>

<%= link_to 'Retour à la tâche', task_path(@task) %>
